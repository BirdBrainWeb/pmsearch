{
	"name": "bbw/pmsearch",
	"type": "phpbb-extension",
	"description": "Adds feature to search through private messages in phpBB via the UCP.",
	"homepage": "https://birdbrainweb.ca/phpbb/extension/pmsearch/",
	"version": "2.0.0",
	"time": "2025-01-06",
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "Matthew Bird",
			"email": "hello@matthewbird.ca",
			"homepage": "https://matthewbird.ca",
			"role": "Developer"
		},
		{
			"name": "Stanislav Atanasov",
			"email": "lucifer@anavaro.com",
			"homepage": "http://anavaro.com",
			"role": "Original Developer"
		}
	],
	"require": {
		"php": ">=8.0",
        "composer/installers": "~1.0"
	},
	"require-dev": {
		"phpbb/epv": "dev-master"
	},
	"extra": {
		"display-name": "PM Search",
		"version-check": {
			"host": "api.updates.birdbrainweb.ca",
			"directory": "/phpbb/extensions/bbw",
			"filename": "pmsearch.json"
		},
		"soft-require": {
			"phpbb/phpbb": ">=3.2,<3.3@dev"
		}
	}
}
